    .container
      h1.title= title
      h3= text
      ul.nav.nav-tabs.nav-justified
        li.active
          a(href="#")="About"
        li
          a(href="#")="Projects"
        li
          a(href="#")="Contact"

  // js
  script(src="//code.jquery.com/jquery.js", type='text/javascript')
